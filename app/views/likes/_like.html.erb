<% if book.liked_by?(current_user) %>
        <%= link_to book_likes_path(book), method: :delete, remote: true do %>
          <i class="fas fa-heart"></i>
          <%= book.likes.count %>
        <% end %>
<% else %>
        <%= link_to book_likes_path(book), method: :post, remote: true do %>
          <i class="far fa-heart"></i>
          <%= book.likes.count %>
        <% end %>
<% end %>