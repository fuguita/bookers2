<div><%= flash[:notice] %>
</div>

<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<p>name</p><%= @user.name %>
<p>introduction</p><%= @user.introduction %>
<p><%= link_to "EDIT", edit_user_path(@user) %></p>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
<p>Title</p><%= f.text_field :title %>
<p>Opinion</p><%= f.text_area :body %><br>
<%= f.submit "Create Book" %>
<% end %>


<h1>Books</h1>

<table class ="book_list">
    <thead>
        <th></th>
        <th>Title</th>
        <th>Opnion</th>
        <th colspan="3"></th>
    </thead>
    <tbody>
     <% @books.each do |book| %>
    <tr>
     <td>
       <%= link_to user_path(@user.id) do %>
       <%= image_tag book.user.get_profile_image(50,50) %>
     </td>
     <% end %>
     <td>
       <%= link_to book_path(book.id) do %>
       <%= book.title %>
       <% end %>
     </td>
     <td>
       <%= book.body %>
     </td>
     </tr>
    </tbody>
    <% end %>

</table>



