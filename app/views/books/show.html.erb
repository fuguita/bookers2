<h1>Book detail</h1>
<table class="book_details">
 <tbody>
 <tr>
   <td>
    <%= image_tag @book.user.get_profile_image(50,50) %><br>
    <%= link_to user_path(@user.id) do %>
    <%= @book.user.name %>
    <% end %>
   </td>

 <td>
       <%= link_to book_path(@book.id) do %>
       <%= @book.title %>
    <% end %>
     </td>
  <td>
    <%= @book.body %>
  </td>

  <div>
    <% if @user == current_user %>
  <td>
   <%= link_to "Edit", edit_book_path(@book) %>
  </td>
  <td>
   <%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>
  </td>
  

  </div>

 </tr>

  </tbody>
</table>

