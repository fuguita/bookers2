<h1>Book detail</h1>
<table class="book_details">
 <tbody>
 <tr>
   <td>
    <%= image_tag @book.user.get_profile_image %>
   </td>
  <td>
    <%= @book.title %>
  </td>
  <td>
    <%= @book.body %>
  </td>
  <div>
    <% if @user == current_user %>
  <td>
   <%= link_to "Edit" edit_book_path(@book) %>
  </td>
  <td>
   <%= link_to "Destroy" book_path(@book), method: :delate %>
  </td>
  <% end %>
  </div>
  
 </tr>
  
  </tbody>
</table>

