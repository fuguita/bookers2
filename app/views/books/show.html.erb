
<div class="container px-5 px-sm-0">
 <div class="row">

  <div class="col-md-3">
<%= render 'users/info', user: @user %>
<%= render 'post', book: Book.new %>

</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
 <tbody>
 <tr>
   <td>
    <%= image_tag @book.user.get_profile_image(100,100) %><br>
    <%= link_to user_path(@user.id) do %>
    <%= @book.user.name %>
    <% end %>
   </td>

 <td>
       <%= link_to book_path(@book.id) do %>
       <%= @book.title %>
    <% end %>
     </td>
  <td>
    <%= @book.body %>
  </td>
   <td id="like_btn_<%= @book.id %>">
         <%= render  partial: "likes/like", locals: {book: @book} %>
     </td>

      <td><%= render "static_rate", book: @book %></td>

     <td class="counts_comment">
      <%= render "book_comments/count", book: @book %>
     </td>


     <div>
        <% if @user == current_user %>
           <td>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
           </td>
           <td>
            <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
         <% end %>
           </td>
     </div>
    </tr>
  </tbody>
</table>

<div class="comments_index">
 <%= render "book_comments/comment_index", book: @book %>
</div>

<div class="comments_form">
 <%= render "book_comments/comment_form", book: @book, book_comment: @book_comment %>
</div>

    </div>
  </div>
</div>

