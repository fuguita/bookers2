<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>Editing Book</h1>

<% if @book.errors.any? %>
<%= @book.errors.count %><strong>errors prohibited this obj from being saved:</strong>
<ul><% @book.errors.full_messages.each do |message| %>
 <li><%= message %></li>
<% end %>
</ul>
<% end %>

<%= form_with model: @book do |f| %>
<div class="form-group">
   <p>Title</p>
  <%= f.text_field :title %>
</div>
<div class="form-group">
  <p>Opinion</p>
<%= f.text_area :body %><br>
</div>
<div class="form-group">
<%= f.submit "Update Book", class: "btn btn-success" %>
</div>
<% end %>

<%= link_to "Show", book_path(@book) %>|
<%= link_to "Back", user_path(current_user) %>

  </div>
 </div>
</div>