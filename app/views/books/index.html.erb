<% if @book.errors.any? %>
<%= @book.errors.count %><strong>errors prohibited this obj from being saved:</strong>
<ul><% @book.errors.full_messages.each do |message| %>
 <li><%= message %></li>
<% end %>
</ul>
<% end %>
<%= render 'users/info', user: current_user %>

<%= render 'post', book: @book %>

<h1>Books</h1>

<table class ="book_list">
    <thead>
        <th></th>
        <th>Title</th>
        <th>Opnion</th>
        <th colspan="3"></th>
    </thead>
    <tbody>
     <% @books.each do |book| %>
    <tr>
     <td>
       <%= link_to book_path(book.id) do %>
       <%= image_tag book.user.get_profile_image(80,80) %>
       <% end %>
     </td>
     <td>
          <%= link_to book_path(book.id) do %>
       <%= book.title %>
          <% end %>

     </td>


     <td>
       <%= book.body %>

     </td>
     </tr>

    </tbody>
    <% end %>

</table>
