<h1>Books</h1>

<table class ="book_list">
    <thead>
        <th></th>
        <th>Title</th>
        <th>Opnion</th>
        <th colspan="3"></th>
    </thead>
    <tbody>
     <% @books.each do |book| %>
    <tr>
     <td>
       <%= link_to book_path(book.id) do %>
       <%= image_tag book.user.get_profile_image(50,50) %>
       <% end %>
     </td>
     <td>
          <%= link_to book_path(book.id) do %>
       <%= book.title %>
          <% end %>

     </td>


     <td>
       <%= book.body %>

     </td>
     </tr>

    </tbody>
    <% end %>

</table>
